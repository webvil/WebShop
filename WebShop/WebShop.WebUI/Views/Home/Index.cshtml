@model IEnumerable<WebShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3" style="height: 450px; padding: 10px;margin:10px;border: solid thin whitesmoke;">
            <div class="col-md-12">
                <img class="img-responsive" height="250" src="~/Content/img/products/@item.Image" alt="Alternate Text" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <p>$@item.Price</p>
            </div>
            <div class="col-md-12">
                <a class="btn btn-default" href="/">Add to basket</a>
            </div>
        </div>
   

}
</div>

