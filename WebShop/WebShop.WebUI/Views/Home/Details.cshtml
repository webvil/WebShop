@model WebShop.Core.Models.Product

@{
    ViewBag.Title = Model.Name + " Details";
}

<h2>Details for @Html.DisplayFor(model => model.Name)</h2>
<hr />
<div class="row">
    
    <div class="col-md-2">
        
        <img class="img-responsive" src="~/Content/img/products/@Model.Image" />
    </div>
    <div class="col-md-10">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                </dt>

                <dd>
                    <a href="@Url.Action("AddToBasket", "Basket", new { Id=Model.Id })" class="btn btn-default">Add to basket</a>
                </dd>

            </dl>
            <p class="text-right">
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
    <div class="col-md-12 clearfix"></div>
</div>

